{
  "name": "backend",
  "version": "1.0.0",
  "description": "Andela Challenge 2",
  "main": "index.js",
  "scripts": {
    "start": " babel-node ./server/index.js --exec babel-node --preset es2015",
    "babel": "babel --preset es2015 ./test/index.spec.js -o ./dist/test.spec.js",
    "clean": "rm -rf dist",
    "build-dev": "node bin/dev",
    "build-dist": "npm run clean && mkdir dist && babel ./server -s -d dist",
    "test": "mocha --require babel-core/register ./test --recursive --exit",
    "coverage": "istanbul cover _mocha index.spec.js"
  },
  "author": "Ajima Chukwuemeka",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-istanbul": "^0.12.2",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.3",
    "chai-http": "^4.0.0",
    "express": "^4.16.3"
  },
  "devDependencies": {
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0"
  }
}
